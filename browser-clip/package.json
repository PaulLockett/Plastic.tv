{
  "name": "browser-clip",
  "version": "1.0.0",
  "description": "Medal.tv for your browser - Always-on network capture with instant clip saving",
  "type": "module",
  "scripts": {
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "NODE_OPTIONS='--experimental-vm-modules' jest --config jest.config.js --testPathPattern='tests/unit'",
    "test:integration": "NODE_OPTIONS='--experimental-vm-modules' jest --config jest.config.js --testPathPattern='tests/integration'",
    "test:e2e": "npx playwright test --config playwright.config.ts",
    "test:e2e:browserbase": "BROWSERBASE_ENABLED=true npx playwright test --config playwright.config.ts",
    "test:ai": "npx tsx tests/ai-agent/run-ai-tests.ts",
    "test:all": "npm run test && npm run test:e2e && npm run test:ai",
    "build:extension": "node scripts/build-extension.js",
    "upload:extension": "npx tsx scripts/upload-extension.ts",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@browserbasehq/sdk": "^2.0.0",
    "@eslint/js": "^9.0.0",
    "@browserbasehq/stagehand": "^3.0.0",
    "@playwright/test": "^1.48.0",
    "@types/archiver": "^6.0.0",
    "@types/chrome": "^0.0.270",
    "@types/jest": "^29.5.0",
    "@types/node": "^22.0.0",
    "archiver": "^7.0.0",
    "dotenv": "^16.4.0",
    "eslint": "^9.0.0",
    "fake-indexeddb": "^6.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "openai": "^4.70.0",
    "playwright": "^1.48.0",
    "ts-jest": "^29.2.0",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0",
    "zod": "^3.23.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
