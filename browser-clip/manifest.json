{
  "manifest_version": 3,
  "name": "Browser Clip",
  "version": "1.0.0",
  "description": "Medal.tv for your browser - always-on network capture with instant clip saving",
  "permissions": [
    "debugger",
    "tabs",
    "storage",
    "alarms",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/active-16.png",
      "48": "icons/active-48.png",
      "128": "icons/active-128.png"
    },
    "default_title": "Browser Clip"
  },
  "options_page": "options/options.html",
  "icons": {
    "16": "icons/active-16.png",
    "48": "icons/active-48.png",
    "128": "icons/active-128.png"
  },
  "incognito": "not_allowed"
}
